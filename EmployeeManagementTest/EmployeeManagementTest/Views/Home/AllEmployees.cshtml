@model IEnumerable<EmployeeManagementTest.Business.Models.Employee>

@{
    ViewData["Title"] = "All Employees";
}

<section class="container">
    <div class="form" style="width: 90%; background-color: #1A1A1A;">
        <h2>All Employees</h2>

        <!-- Search Form -->
        <form method="get" action="/search" class="form-group">
            <label for="id">Search Employee by ID:</label>
            <input type="number" name="id" class="form-control" placeholder="Enter Employee ID (optional)" />
            <button type="submit" class="btn">Search</button>
        </form>

        <!-- Employees Table -->
        @if (Model != null && Model.Any())
        {
            <table style="width: 100%; margin-top: 2rem; color: whitesmoke;">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Salary</th>
                        <th>Age</th>
                        <th>Annual Salary</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var employee in Model)
                    {
                        <tr>
                            <td>@employee.Id</td>
                            <td>@employee.EmployeeName</td>
                            <td>$@employee.Salary</td>
                            <td>@employee.EmployeeAge</td>
                            <td>$@employee.EmployeeAnnualSalary</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No employees found.</p>
        }

        <div class="btn-container" style="margin-top: 2rem;">
            <a href="/" class="btn">Back</a>
        </div>
    </div>
</section>
